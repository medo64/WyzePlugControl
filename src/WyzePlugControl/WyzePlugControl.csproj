<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <TrimMode>link</TrimMode>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyName>WyzePlugControl</AssemblyName>
    <RootNamespace>WyzePlugControl</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <Product>WyzePlug Control</Product>
    <Description>Turning Wyze plug on and off.</Description>
    <Authors>Josip Medved</Authors>
    <Version>0.1.0</Version>
  </PropertyGroup>

  <PropertyGroup>
    <RunAnalyzersDuringBuild>true</RunAnalyzersDuringBuild>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\WyzeApi\WyzeApi.csproj" />
  </ItemGroup>

</Project>
